@model IQueryable<Game>

@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
@await Html.PartialAsync("MetatagsPartial")
@await Html.PartialAsync("CssPartial")
@await Html.PartialAsync("HeaderPartial")

<a class="btn btn-primary" style="margin-bottom: 15px" asp-controller="Game" asp-action="AddNewGame">Add new game</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Title image</th>
            <th scope="col">Video</th>
            <th scope="col">Price</th>
            <th scope="col">Changes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <th scope="row">@game.GameId</th>
                <td>@game.Name</td>
                <td>@game.Description</td>
                <td>@game.Category</td>
                <td>@game.TitleImage</td>
                <td>@game.Video</td>
                <td>@game.Price</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Game" asp-action="Edit" asp-route-id="@game.GameId">Edit</a>
                    <a class="btn btn-danger" asp-controller="Game" asp-action="Delete" asp-route-id="@game.GameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>