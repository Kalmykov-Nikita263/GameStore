@model Game
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("MetatagsPartial")
    @await Html.PartialAsync("CssPartial")
</head>
<body>
    <form asp-area="Admin" asp-controller="Game" asp-action="AddNewGame" method="post">
        <div class="form">
            <div asp-validation-summary="All"></div>

            <div class="input-form">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name">
            </div>

            <div class="input-form">
                <label asp-for="Description"></label>
                <input type="text" asp-for="Description">
            </div>

            <div class="input-form">
                <label asp-for="Category"></label>
                <input type="text" asp-for="Category">
            </div>

            <div class="input-form">
                <label asp-for="TitleImage"></label>
                <input type="text" asp-for="TitleImage">
            </div>

            <div class="input-form">
                <label asp-for="Video"></label>
                <input type="text" asp-for="Video">
            </div>

            <div class="input-form">
                <label asp-for="Price"></label>
                <input type="text" asp-for="Price">
            </div>

            <div class="input-form">
                <input type="submit" value="Save changes">
            </div>
        </div>
    </form>
</body>
</html>